<section class="user-signup">
  <header class="page-header">
    <h1>Signup!</h1>
  </header>

  <div class="row">
    <div class="col-sm-6">
      <%= form_for :user, url: '/users' do |form| %>
        
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <%# Name: <%= form.text_field :name %> 

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>
        <%# Email: <%= form.text_field :email %> 

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>
        <%# Password: <%= form.password_field :password %> 

        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%# Password Confirmation: <%= form.password_field :password_confirmation %> 
        
        
        <%= form.submit "Log In", class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</section>