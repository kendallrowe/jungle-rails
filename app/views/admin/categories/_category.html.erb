<div class="panel panel-default products">
  <h1>
    <%= category.name %>
    <small>(<%= pluralize category.products.size, 'product' %>)</small>
  </h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Category</th>
        <th>Price</th>
        <th>Qty Remaining</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'product', collection: category.products, as: :product %>
    </tbody>
  </table>
</div>