<section class="session-new">
  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6">
      <%= form_tag '/login' do %>
        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag 'email', :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag 'password', :password, class: 'form-control' %>
        </div>

        <%= submit_tag "Submit" %>

      <% end %>
    </div>
  </div>
</section>
